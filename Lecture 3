print(my_list)
print(len(my_list))
mylist = ['one','two','three']
print(mylist[0]) ## indexing 
print(mylist[1:])
print(mylist[::-1])
print(mylist + ['four','five'])
mylist.append('four')
print(mylist)
popped_item= mylist.pop(-1)
print(popped_item)


