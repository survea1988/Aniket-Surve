print(max(num_list))
print(sum(num_list))
print(sum(num_list)/len(num_list))

# Dictionaries
mydict = {'key1':'value1','key2':'value2'}
print(mydict)
print(mydict['key1'])
price_lookup = {'apple':2.99,'oranges':1.99,'milk':5.80}
print(price_lookup)
print (price_lookup['apple'])
d= {'k1': 123,'k2':[0,1,2],'k3':{'insidekey':100}}
print(d['k2'])
print(d['k2'][2])
print(d['k3']['insidekey'])
d={'key1': ['a','b','c']}
print(d)
letter= d['key1'][2].upper()
print(letter)
print(d)
d={'k1':100,'k2':200}
print(d)
d['k3']=300 #adding new key value pair to the dictionary
print(d)    
d['k1']= 'NEW VALUE' #updating existing key value pair in the dictionary
print(d)
d= {'k1':100,'k2':200,'k3':300}
d.keys()
print(d.keys()) 
print(d.values())

